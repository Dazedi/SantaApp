{
  "//1": "describes your app and its dependencies",
  "//2": "https://docs.npmjs.com/files/package.json",
  "//3": "updating this file will download and update your packages",
  "name": "santa-app",
  "version": "0.0.1",
  "description": "A simple Node app built on Express, instantly up and running.",
  "main": "server.js",
  "scripts": {
    "build:server": "tsc --project src/server",
    "build:client": "webpack --config src/client/webpack.config.js",
    "build": "npm run build:server && npm run build:client",
    "start": "npm run build && node -r dotenv/config dist/server/server.js",
    "watch:server:1": "tsc --watch --project src/server",
    "watch:server": "nodemon -e ts --exec \"npm run build:server && node -r dotenv/config dist/server/server.js\"",
    "watch:client": "webpack --watch --config src/client/webpack.config.js",
    "dev": "concurrently --kill-others \"npm run watch:server\" \"npm run watch:client\""
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "luxon": "^1.25.0",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.11",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "engines": {
    "node": "12.x"
  },
  "repository": {
    "url": "https://github.com/alj-devops/santa-app"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express",
    "typescript",
    "react",
    "webpack"
  ],
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/hapi__joi": "17.1.4",
    "@types/luxon": "^1.24.4",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.6.4",
    "@types/node-cron": "^2.0.3",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^6.4.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^5.3.0",
    "css-loader": "^4.2.2",
    "nodemon": "^2.0.4",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "typescript": "^3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
